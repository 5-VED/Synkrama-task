{
    "watch": ["src"],
    "ext": ".ts,.js",
    "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "exec": "ts-node ./src/server.ts",
    "env": {
      "NODE_ENV": "development"
    },
    "events": {
      "restart": "echo \"App restarted due to changes\""
    },
    "delay": "1500ms"
  } 